<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color_gradient1"
    tools:context=".OrderDetailsActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/background_color_gradient1"
        android:elevation="0dp"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/arrow_back"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/white" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:elevation="20dp"
                android:padding="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@font/adamina"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="Price"
                            android:textColor="@color/textColor"
                            android:textSize="18sp" />

                        <TextView
                            android:fontFamily="@font/cinzel_decorative"
                            android:id="@+id/order_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:textColor="@color/textColor"
                            android:textSize="18sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@font/adamina"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="Discount"
                            android:textColor="@color/textColor"
                            android:textSize="18sp" />

                        <TextView
                            android:fontFamily="@font/cinzel_decorative"
                            android:id="@+id/order_discount_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:textColor="@color/textColor"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@font/adamina"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="Delivery"
                            android:textColor="@color/textColor"
                            android:textSize="18sp" />

                        <TextView
                            android:fontFamily="@font/cinzel_decorative"
                            android:id="@+id/order_delivery_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:textColor="@color/textColor"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/textColor" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@font/adamina"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="Total Price"
                            android:textColor="@color/textColor"
                            android:textSize="18sp" />

                        <TextView
                            android:fontFamily="@font/cinzel_decorative"
                            android:id="@+id/order_total_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:textColor="#10A316"
                            android:textSize="18sp" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/textColor" />

                    <TextView
                        android:id="@+id/order_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:padding="10dp"
                        android:text="Name"
                        android:fontFamily="@font/cinzel_decorative"
                        android:textColor="@color/textColor"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/order_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:padding="10dp"
                        android:text="Address"
                        android:fontFamily="@font/cinzel_decorative"
                        android:textColor="@color/textColor"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/order_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:padding="10dp"
                        android:fontFamily="@font/cinzel_decorative"
                        android:text="Phone"
                        android:textColor="@color/textColor"
                        android:textSize="18sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/textColor" />


                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cod_card"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:elevation="20dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="20dp"
                            app:cardMaxElevation="20dp">

                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:layout_width="match_parent"
                                app:shimmer_base_alpha="0.8"
                                app:shimmer_tilt="45"
                                app:shimmer_base_color="@color/myColor"
                                app:shimmer_highlight_color="@color/myColor"
                                app:shimmer_direction="top_to_bottom"
                                android:layout_height="match_parent">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@drawable/background_color_gradient"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/cinzel_decorative"
                                    android:id="@+id/cod_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:text="COD"
                                    android:textColor="@color/white"
                                    android:textSize="19sp" />

                            </LinearLayout>

                            </com.facebook.shimmer.ShimmerFrameLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"
                            android:elevation="20dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="20dp"
                            app:cardMaxElevation="20dp"
                            app:layout_constraintBottom_toBottomOf="@+id/cod_card"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/cod_card"
                            app:layout_constraintTop_toTopOf="@+id/cod_card">

                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:layout_width="match_parent"
                                app:shimmer_base_alpha="0.8"
                                app:shimmer_tilt="45"
                                app:shimmer_base_color="@color/myColor"
                                app:shimmer_highlight_color="@color/myColor"
                                app:shimmer_direction="bottom_to_top"
                                android:layout_height="match_parent">



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@drawable/background_color_gradient1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/cinzel_decorative"
                                    android:id="@+id/online_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:text="ONLINE"
                                    android:textColor="@color/white"
                                    android:textSize="19sp" />

                            </LinearLayout>
                            </com.facebook.shimmer.ShimmerFrameLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>