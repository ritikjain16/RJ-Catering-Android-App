<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".ReviewActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/background_color_gradient"
        android:elevation="0dp"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/arrow_back"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/white" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout2"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/z1"
                android:layout_width="0dp"
                android:backgroundTint="@color/bgColor1"
                android:layout_height="wrap_content"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                android:elevation="20dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="25dp"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Review Your Order"
                    android:fontFamily="@font/cinzel_decorative"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:textAlignment="center"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/z2"
                android:layout_width="0dp"
                android:backgroundTint="@color/bgColor1"
                android:layout_height="wrap_content"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                android:elevation="20dp"
                app:cardCornerRadius="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/z1">

                <TextView
                    android:id="@+id/very_bad"
                    android:padding="15dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_baseline_emoji_emotions_24"
                    android:layout_width="match_parent"
                    android:drawableTint="#FB0505"
                    android:drawablePadding="10dp"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    android:text="Very BAd"
                    android:fontFamily="@font/cinzel_decorative"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/z3"
                android:layout_width="0dp"
                android:backgroundTint="@color/bgColor1"
                android:layout_height="wrap_content"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                android:elevation="20dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/z2">

                <TextView
                    android:id="@+id/bad"
                    android:padding="15dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:textSize="25sp"
                    android:drawableStart="@drawable/ic_baseline_emoji_emotions_24"
                    android:layout_width="match_parent"
                    android:drawableTint="#D50E0E"
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"
                    android:text="BAd"
                    android:fontFamily="@font/cinzel_decorative"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/z4"
                android:layout_width="0dp"
                android:backgroundTint="@color/bgColor1"
                android:layout_height="wrap_content"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                android:elevation="20dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/z3">

                <TextView
                    android:id="@+id/good"
                    android:padding="15dp"
                    android:textSize="25sp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_baseline_emoji_emotions_24"
                    android:layout_width="match_parent"
                    android:drawableTint="#FBD205"
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"
                    android:text="Good"
                    android:fontFamily="@font/cinzel_decorative"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/z5"
                android:layout_width="0dp"
                android:backgroundTint="@color/bgColor1"
                android:layout_height="wrap_content"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                android:elevation="20dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/z4">

                <TextView
                    android:id="@+id/very_good"
                    android:padding="15dp"
                    android:textSize="25sp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_baseline_emoji_emotions_24"
                    android:layout_width="match_parent"
                    android:drawableTint="#448F1C"
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"
                    android:text="Very Good"
                    android:fontFamily="@font/cinzel_decorative"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/z6"
                android:layout_width="0dp"
                android:backgroundTint="@color/bgColor1"
                android:layout_height="wrap_content"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                android:elevation="20dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/z5">

                <TextView
                    android:id="@+id/excellent"
                    android:padding="15dp"
                    android:textSize="25sp"
                    android:drawableStart="@drawable/ic_baseline_emoji_emotions_24"
                    android:layout_width="match_parent"
                    android:drawableTint="#38F405"
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"
                    android:text="Excellent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:fontFamily="@font/cinzel_decorative"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
/>

            </androidx.cardview.widget.CardView>




        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>