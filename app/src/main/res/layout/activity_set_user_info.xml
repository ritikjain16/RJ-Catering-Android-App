<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color_gradient1"
    tools:context=".SetUserInfoActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:background="@color/bgColor"
        android:padding="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/name"
                android:fontFamily="@font/adamina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#70ffffff"
                android:backgroundTint="@android:color/transparent"
                android:hint="Enter your name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/enter_email"
                android:fontFamily="@font/adamina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#70ffffff"
                android:backgroundTint="@android:color/transparent"
                android:hint="Enter email address"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/enter_DOB"
                android:fontFamily="@font/adamina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#70ffffff"
                android:backgroundTint="@android:color/transparent"
                android:hint="Enter date of birth (dd/mm/yyyy)"
                android:inputType="date"
                android:maxLength="10"
                android:padding="10dp"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/enter_Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/adamina"
                android:background="#70ffffff"
                android:backgroundTint="@android:color/transparent"
                android:hint="Enter your gender (male,female,etc.)"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/textColor"
                android:textSize="18sp" />


            <Button
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/cinzel_decorative"
                android:backgroundTint="@color/myColor"
                android:text="Save" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>